<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_40sdp"
        android:background="@color/backgroundColor"
        tools:context=".fragment.profile.ChangePasswordFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <LinearLayout
                android:id="@+id/personalInformationLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kelme.custom.RegularTextView
                        android:id="@+id/oldPasswordTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/old_password"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textview_gray"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.kelme.custom.RegularEditText
                        android:id="@+id/oldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_7sdp"
                        android:gravity="center|start"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:background="@drawable/edittext_background"
                        app:layout_constraintTop_toBottomOf="@+id/oldPasswordTitle" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kelme.custom.RegularTextView
                        android:id="@+id/newPasswordTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/new_password"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textview_gray"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.kelme.custom.RegularEditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_7sdp"
                        android:gravity="center|start"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:background="@drawable/edittext_background"
                        app:layout_constraintTop_toBottomOf="@+id/newPasswordTitle" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.kelme.custom.RegularTextView
                        android:id="@+id/confirmPasswordTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_password"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textview_gray"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.kelme.custom.RegularEditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_7sdp"
                        android:gravity="center|start"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:background="@drawable/edittext_background"
                        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTitle" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.kelme.custom.RegularButton
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_14sdp"
                    android:background="@drawable/bg_fill_red"
                    app:layout_constraintTop_toBottomOf="@id/contraint" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>